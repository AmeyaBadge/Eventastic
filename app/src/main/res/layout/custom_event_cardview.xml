<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    app:cardElevation="40dp"
    android:outlineSpotShadowColor="#C44E4E4E"
    app:cardCornerRadius="30dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:cardBackgroundColor="@color/appBlueTint"-->
<!--            app:cardCornerRadius="100dp"-->
<!--            app:cardElevation="41dp"-->
<!--            android:outlineSpotShadowColor="#C44E4E4E"-->
<!--            app:contentPaddingBottom="8dp"-->
<!--            app:contentPaddingLeft="10dp"-->
<!--            app:contentPaddingRight="10dp"-->
<!--            android:layout_marginRight="60dp"-->
<!--            app:contentPaddingTop="8dp">-->

<!--            <TextView-->
<!--                android:id="@+id/eventCardCount"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="999+" />-->
<!--        </androidx.cardview.widget.CardView>-->

        <ImageView
            android:id="@+id/eventCardImage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/no_thumbnail"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/eventCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Heading"
                style="@style/AppEventCardHeadingText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eventCardAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingEnd="25dp"
                    android:text="221B Baker's Street, London" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eventCardDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:text="5 May'23" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|" />

                    <TextView
                        android:id="@+id/eventCardTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="3:00 PM" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
